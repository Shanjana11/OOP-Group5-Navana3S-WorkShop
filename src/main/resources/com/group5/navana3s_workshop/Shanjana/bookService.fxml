<AnchorPane prefHeight="545.0" prefWidth="860.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group5.navana3s_workshop.Shanjana.BookServiceController">

    <children>
      <Label layoutX="42.0" layoutY="46.0" text="Book Service Appointment">
         <font>
            <Font name="Arial Bold Italic" size="23.0" />
         </font>
      </Label>

        <Label layoutX="274.0" layoutY="141.0" text="Vehicle ID:" />
        <TextField fx:id="vehicleIdField" layoutX="414.0" layoutY="136.0" prefHeight="26.0" prefWidth="175.0" />

        <Label layoutX="274.0" layoutY="251.0" text="Date:" />
        <DatePicker fx:id="datePicker" layoutX="414.0" layoutY="246.0" />

        <Label layoutX="274.0" layoutY="311.0" text="Time:" />

        <Button layoutX="387.0" layoutY="381.0" onAction="#SubmitBooking" style="-fx-background-color: #3e3e3e;" text="Confirm Service" textFill="#fcf9f9" />

        <Button layoutX="759.0" layoutY="488.0" onAction="#Back" prefHeight="27.0" prefWidth="70.0" style="-fx-background-color: #3e3e3e;" text="Back" textFill="#efe7e7" />
