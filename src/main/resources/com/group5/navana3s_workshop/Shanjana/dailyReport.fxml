<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group5.navana3s_workshop.Shanjana.DailyReportController">
    <children>
        <Text layoutX="60.0" layoutY="60.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Daily Service Report">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Text>

        <Text layoutX="60.0" layoutY="120.0" text="Select Date:">
            <font>
                <Font size="14.0" />
            </font>
        </Text>
        <DatePicker fx:id="reportDatePicker" layoutX="160.0" layoutY="100.0" prefHeight="30.0" prefWidth="200.0" />

        <Button layoutX="380.0" layoutY="100.0" mnemonicParsing="false" onAction="#handleGenerateButton" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #3e3e3e;" text="Generate" textFill="WHITE" />

        <Text layoutX="60.0" layoutY="170.0" text="Summary:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Text>

        <Label fx:id="totalJobsLabel" layoutX="60.0" layoutY="190.0" text="Total Jobs: 0">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <Label fx:id="completedJobsLabel" layoutX="250.0" layoutY="190.0" text="Completed: 0">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <Label fx:id="pendingJobsLabel" layoutX="420.0" layoutY="190.0" text="Pending: 0">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <Label fx:id="totalRevenueLabel" layoutX="590.0" layoutY="190.0" text="Revenue: BDT 0.00">
            <font>
                <Font size="14.0" />
            </font>
        </Label>

        <TableView fx:id="dailyJobsTable" layoutX="47.0" layoutY="230.0" prefHeight="250.0" prefWidth="806.0">
            <columns>
                <TableColumn fx:id="jobCardCol" prefWidth="110.0" text="Job Card" />
                <TableColumn fx:id="customerCol" prefWidth="140.0" text="Customer" />
                <TableColumn fx:id="vehicleCol" prefWidth="120.0" text="Vehicle" />
                <TableColumn fx:id="serviceCol" prefWidth="150.0" text="Service" />
                <TableColumn fx:id="amountCol" prefWidth="120.0" text="Amount" />
                <TableColumn fx:id="statusCol" prefWidth="166.0" text="Status" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>

        <Button layoutX="810.0" layoutY="520.0" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="36.0" prefWidth="57.0" style="-fx-background-color: #3e3e3e;" text="Back" textFill="WHITE" />

        <Button layoutX="37.0" layoutY="520.0" mnemonicParsing="false" onAction="#handleSubmitToManagerButton" prefHeight="36.0" prefWidth="146.0" style="-fx-background-color: #4CAF50;" text="Submit to Manager" textFill="WHITE" />
      <Label fx:id="infoLabel" alignment="CENTER" layoutX="350.0" layoutY="520.0" prefHeight="36.0" prefWidth="270.0" />
    </children>
</AnchorPane>
