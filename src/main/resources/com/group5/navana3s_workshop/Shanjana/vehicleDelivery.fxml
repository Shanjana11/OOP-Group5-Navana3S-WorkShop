<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group5.navana3s_workshop.Shanjana.VehicleDeliveryController">
    <children>
        <Text layoutX="25.0" layoutY="57.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Vehicle Delivery">
            <font>
                <Font name="Arial Bold Italic" size="23.0" />
            </font>
        </Text>

        <TableView fx:id="readyForDeliveryTable" layoutX="47.0" layoutY="100.0" prefHeight="200.0" prefWidth="806.0">
            <columns>
                <TableColumn fx:id="jobCardCol" prefWidth="120.0" text="Job Card No" />
                <TableColumn fx:id="customerCol" prefWidth="150.0" text="Customer" />
                <TableColumn fx:id="vehicleCol" prefWidth="150.0" text="Vehicle" />
                <TableColumn fx:id="serviceTypeCol" prefWidth="180.0" text="Service Type" />
                <TableColumn fx:id="invoiceCol" prefWidth="100.0" text="Invoice" />
                <TableColumn fx:id="paymentCol" prefWidth="106.0" text="Payment" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>

        <Text layoutX="60.0" layoutY="330.0" text="Delivery Checklist:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Text>

        <CheckBox fx:id="invoicePaidCheckBox" layoutX="60.0" layoutY="350.0" text="Invoice Paid" />
        <CheckBox fx:id="finalInspectionCheckBox" layoutX="60.0" layoutY="380.0" text="Final Inspection Complete" />
        <CheckBox fx:id="vehicleCleanedCheckBox" layoutX="60.0" layoutY="410.0" text="Vehicle Cleaned" />
        <CheckBox fx:id="keysAvailableCheckBox" layoutX="300.0" layoutY="350.0" text="Keys Available" />
        <CheckBox fx:id="documentsReadyCheckBox" layoutX="300.0" layoutY="380.0" text="Documents Ready" />
        <CheckBox fx:id="customerNotifiedCheckBox" layoutX="300.0" layoutY="410.0" text="Customer Notified" />

        <Text layoutX="60.0" layoutY="470.0" text="Customer Signature:">
            <font>
                <Font size="14.0" />
            </font>
        </Text>
        <TextField fx:id="signatureField" layoutX="210.0" layoutY="450.0" prefHeight="30.0" prefWidth="300.0" promptText="Enter customer name for confirmation" />

        <Button layoutX="775.0" layoutY="533.0" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="36.0" prefWidth="86.0" style="-fx-background-color: #3e3e3e;" text="Back" textFill="WHITE" />

        <Button layoutX="39.0" layoutY="533.0" mnemonicParsing="false" onAction="#handleCompleteDeliveryButton" prefHeight="36.0" prefWidth="144.0" style="-fx-background-color: #4CAF50;" text="Complete Delivery" textFill="WHITE" />
    </children>
</AnchorPane>
