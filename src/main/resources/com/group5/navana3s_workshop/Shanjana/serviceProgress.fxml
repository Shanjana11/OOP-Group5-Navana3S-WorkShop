<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group5.navana3s_workshop.Shanjana.ServiceProgressController">
    <children>
        <Text layoutX="23.0" layoutY="60.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Update Service Progress">
            <font>
                <Font name="Arial Bold Italic" size="23.0" />
            </font>
        </Text>

        <TableView fx:id="serviceProgressTable" layoutX="47.0" layoutY="100.0" prefHeight="250.0" prefWidth="806.0">
            <columns>
                <TableColumn fx:id="jobCardCol" prefWidth="120.0" text="Job Card No" />
                <TableColumn fx:id="customerCol" prefWidth="150.0" text="Customer" />
                <TableColumn fx:id="vehicleCol" prefWidth="130.0" text="Vehicle" />
                <TableColumn fx:id="serviceTypeCol" prefWidth="150.0" text="Service Type" />
                <TableColumn fx:id="statusCol" prefWidth="130.0" text="Status" />
                <TableColumn fx:id="progressCol" prefWidth="126.0" text="Progress %" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>

        <Text layoutX="60.0" layoutY="380.0" text="Update Selected Job:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Text>

        <Text layoutX="60.0" layoutY="465.0" text="New Status:">
            <font>
                <Font size="14.0" />
            </font>
        </Text>
        <ComboBox fx:id="statusComboBox" layoutX="160.0" layoutY="445.0" prefHeight="30.0" prefWidth="200.0" />

        <Text layoutX="400.0" layoutY="420.0" text="Progress Message:">
            <font>
                <Font size="14.0" />
            </font>
        </Text>
        <TextArea fx:id="progressMessageArea" layoutX="400.0" layoutY="430.0" prefHeight="60.0" prefWidth="440.0" promptText="Enter message to send to customer..." wrapText="true" />

        <Button layoutX="808.0" layoutY="533.0" mnemonicParsing="false" onAction="#handleBackButton" prefHeight="36.0" prefWidth="64.0" style="-fx-background-color: #3e3e3e;" text="Back" textFill="WHITE" />

        <Button layoutX="47.0" layoutY="533.0" mnemonicParsing="false" onAction="#handleUpdateProgressButton" prefHeight="36.0" prefWidth="191.0" style="-fx-background-color: #4CAF50;" text="Update and Notify Customer" textFill="WHITE" />
      <Label layoutX="60.0" layoutY="404.0" text="Job Card:">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TextField fx:id="jobCard" layoutX="160.0" layoutY="402.0" prefHeight="26.0" prefWidth="200.0" />
    </children>
</AnchorPane>
